{
  "compileOnSave": false,
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "module": "esnext",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "typeRoots": ["node_modules/@types"],
    "types": ["node"],
    "lib": ["es2018", "dom"],
    "paths": {
      "@shared": ["projects/shared/src/public_api"],
      "@shared/*": ["projects/shared/src/public_api/*"],
      "@arenglish/pro-publica": ["dist/pro-publica"],
      "@arenglish/pro-publica/*": ["dist/pro-publica/*"],
      "@arenglish/resource": ["dist/resource"],
      "@arenglish/resource/*": ["dist/resource/*"],
      "@pac": ["./projects/pac-politics/src"],
      "@pac/*": ["./projects/pac-politics/src/*"]
    }
  }
}
